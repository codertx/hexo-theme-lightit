@import "_variable"
@import "_partials/iconfont"
@import "_partials/animate"
@import "_partials/highlight"

body
  margin: 0

html
  height: 100%

body
  font-family: font-zh
  color: color-site
  -moz-osx-font-smoothing: grayscale
  -webkit-font-smoothing: antialiased
  font-size: font-size
  min-height: 100%
  box-sizing: border-box
  padding-bottom: bar-height
  position: relative

a
  text-decoration: none
  color: color-site

h1
  font-size: title-size

.iconfont
  font-family: 'iconfont'

.container
  padding-left: title-padding

.societies
  margin-top: 15px

.social
  color: color-site
  display: inline-block
  font-size: 20px
  margin-right: .5em

.header
  height: bar-height
  background-color: color-header-bg
  font-size: bar-size

  > .home.nav
    background-color: color-home-bg
    line-height: bar-height
    height: bar-height
    display: inline-block
    width: 5em
    padding-left: site-padding

.posts
  margin-top: 38px
  line-height: 2em

.post-item
  font-size: 26px
  line-height: 1.7em
  &:hover
    color: #698ebf

.post-page
  margin-top: .5em
  > .page
    display: inline-block
    background-color: color-btn-bg
    width: 3.2em
    line-height: 1.6em
    font-size: 12px
    text-align: center
    cursor: pointer
    &.disable
      background-color: color-btn-bg-highlight
      cursor: not-allowed
      color: #AAAAAA
    &:hover
      background-color: color-btn-bg-highlight
      color: #888888

.article-entry
  margin-top: 40px
  margin-bottom: 30px
  font-size: article-size
  max-width: 700px
  & > .date
    color: #AAA
    font-family: font-meta

.article
  margin-top: 15px
  letter-spacing: .07em
  line-height: 1.5em
  & > h2
    margin-top: 1.8em
    font-size: subtitle-size
  & > h3
    font-size: h3-size
  & > p
    color: #444
  & a
    text-decoration: underline

.footer
  height: bar-height
  background-color: color-footer-bg
  line-height: bar-height
  color: color-footer
  font-size: bar-size
  position: absolute
  box-sizing: border-box
  padding-left: title-padding
  bottom: 0
  left: 0
  width: 100%
  > a
    color: color-footer

h1.title, h2.subtitle
  font-weight: title-weight
  color: color-site
  margin: 0

h1.title
  margin-top: 1em
  margin-bottom: 5px

h2.subtitle
  font-size: subtitle-size
  & > span
    animation: 1s steps(2, start) 0s infinite blink
    padding-right: .2em

table
  border-radius: 1em

table, tbody
  width: 100%
  margin: 15px 0
  border-collapse: collapse
  background-color: #fff

th
  line-height: 3em
  background-color:#333
  color:#CCC

tr
  line-height: 2em

tbody > tr:hover
  background-color: #eee

th, td
  font-size:0.95em
	padding:4px
	border-collapse:collapse
  border: 1px solid #ffffff

.article-title
  margin: 0.3em 0
  font-weight: bolder